<h3><%= @user.firstname%> <%= @user.lastname%> is signed in!</h3>

<%= link_to 'Add Score',  new_score_path %>

<div>
	<h1>Tests Taken:</h1>
	<table class="table-striped table-condensed table-hover">
	  <tbody>
		  <tr>
		   <tr>
		    <th>Type</th>
		    <th>Name</th>
		    <th colspan="2" class="center">Date</th>
		    <th></th>
		   </tr>	
		    <% @scores.each do |score| %>
		    	<td>
		      	<%= score.test_type %>
		    	</td>
		    	
		    	<td>
		      	<%= score.name %>
		    	</td>
					
					<td>
		      	<%= score.month %>
		    	</td>

		    	<td>
		      	<%= score.year %>
		    	</td>

		    	<td>
		      	<%= link_to 'Edit', edit_score_path(score) %> 
		    	</td>
		    </tr>	    
		  <% end %>
		</tbody>    
	</table>
</div>


