<div class="panel-body">
  <%= simple_form_for(@score, html: { class: "form-horizontal"}) do |f| %>
	  <%= f.error_notification %>
    <div class="form-group"> 
      <%= f.input :test_type, as: :text, input_html: { rows: "1", :class => "form-control" }, label: "Type" %>
    </div>
    <div class="form-group"> 
      <%= f.input :name, as: :text, input_html: { rows: "2", :class => "form-control" }, label: "Test Name" %>
    </div>

    <div class="form-group"> 
      <%= f.input :math, as: :integer, input_html: { rows: "2", :class => "form-control" }, label: "Math:" %>
    </div>
    
    <%= f.button :submit, "Post Score", class: "btn btn-primary" %>
  <% end %>
</div>


