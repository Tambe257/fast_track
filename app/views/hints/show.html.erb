<div class="show-box well">
	<div class="form-container">
		<p id="notice"><%= notice %></p>

		<p>
		  <strong>Hint:</strong>
		  <%= markdown(@hint.body) %>
		</p>

		<p>
		  <strong>Explanation:</strong>
		  <%= markdown(@hint.explanation) %>
		</p>

		<p>
		  <strong>Images:</strong>
		  <%= image_tag @hint.image.url(:medium) %>
		  <%= image_tag @hint.image2.url(:medium) %>
		</p>

		<%= link_to 'Edit', edit_hint_path(@hint) %> |
		<%= link_to 'Back', hints_path %>
	</div>
</div>	