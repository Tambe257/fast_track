<div class="user_table">

<table class="score_table">
	<tbody>
		<tr>
			<th><h3>Student:</h3></th>
			<th><h3>Tests Taken:</h3></th>
		</tr>	
		<% @users.each do |user| %>
			<% if user.admin == false || user.admin == nil %>
				<tr>
					<td>
						<h3><%= link_to "#{user.firstname} #{user.lastname}", user %></h3>
					</td>
					<td>
						<h3><%= user.scores.count %></h3>
					</td>
				</tr>	
			<% end %>	
		<% end %>
	</tbody>	
</table>

<%= pie_chart User.group(:firstname).count %>
</div>