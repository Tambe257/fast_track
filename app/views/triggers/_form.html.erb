<div class="well">
  <div clas="panel-body">
    <%= simple_form_for(@trigger, html: { class: "form-horizontal"}) do |f| %>
      <%= f.error_notification %>

      Rule: <%= f.collection_select(:rule_id, Rule.all, :id, :name, :prompt => true) %>
      <div class="form-group">
        <%= f.input :body, as: :text, input_html: { rows: "6", :class => "form-control" }, label: "Trigger:" %>
      </div>
      <div class="form-group">
        <%= f.input :explanation, as: :text, input_html: { rows: "6", :class => "form-control" }, label: "Explanation " %>
      </div>
      
      <div class="form-group">
        <%= f.input :image, label: "Upload an image" %>
        <%= f.input :image2, label: "Upload an image" %>
      </div>
     
         <%= f.button :submit, "Post Trigger", class: "btn btn-primary" %>
    
    <% end %>
  </div>  
</div>