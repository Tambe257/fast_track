<div class="form-container">
  <h1>Sessions:</h1>
  <div class="score_table">
    <table>
      <thead>
        <tr>
          <th>Student:</th>
          <th>Date:</th>
          <th>Comments:</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @sittings.each do |sitting| %>
          <tr>
            <td><%= sitting.user.full_name %></td>
            <td><%= sitting.date %></td>
            <td><%= sitting.comment %></td>
            <td><%= link_to 'Show', sitting %></td>
            <td><%= link_to 'Edit', edit_sitting_path(sitting) %></td>
            <td><%= link_to 'Destroy', sitting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>  

  <%= link_to 'New Sitting', new_sitting_path, class: "btn btn-primary" %>
</div>  
