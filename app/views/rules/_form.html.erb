<div class="well">
  <div clas="panel-body">
    <%= simple_form_for(@rule, html: { class: "form-horizontal"}) do |f| %>
      <%= f.error_notification %>
      
      Chapter: <%= f.collection_select(:chapter_id, Chapter.all, :id, :name, :prompt => true) %>
      <div class="form-group">
        <%= f.input :name, as: :text, input_html: { rows: "1", :class => "form-control" }, label: "Rule Name:" %>
      </div>
      <div class="form-group">
        <%= f.input :subject, as: :text, input_html: { rows: "1", :class => "form-control" }, label: "Which Subject? " %>
      </div>

     
         <%= f.button :submit, "Post Rule", class: "btn btn-primary" %>
    
    <% end %>
  </div>  
</div>