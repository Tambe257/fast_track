<div class="form_page">
	<div class="panel panel-default form_page">
		<div class="panel-heading form_heading">
			<h1>Edit Score</h1>
		</div>	
		<div class="panel-body">	
			<%= render 'form' %>

			<%= link_to @score, method: :delete, data: { confirm: 'Are you sure?' } do %>
          <span class="glyphicon glyphicon-trash"></span>
              Delete
      <% end %>        
		</div>	

		<div class="panel-footer pin_edit">
			<%= link_to 'Show', @score %> |
			<%= link_to 'Back', @score.user %>
		</div>	
	</div>
</div>	